<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleTextViewCondensedTitle">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleTextViewDescription">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/blue_222053</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="StyleTextViewDates">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/grey_00000099</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StyleTextViewComicsTitle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="StyleTextViewDescriptionExpanded">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/blue_222053</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>